<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
	<class name="be.mobyus.hibernate.entities.caching.Description" table="description">

		<id name="id" type="long" column="id" access="property">
			<generator class="native"/>
		</id>
		
		<bag name="translations" cascade="all,delete-orphan">
			<key column="description_id" not-null="true"/>
			<one-to-many class="be.mobyus.hibernate.entities.caching.DescriptionTranslation"/>
		</bag>

	</class>
</hibernate-mapping>