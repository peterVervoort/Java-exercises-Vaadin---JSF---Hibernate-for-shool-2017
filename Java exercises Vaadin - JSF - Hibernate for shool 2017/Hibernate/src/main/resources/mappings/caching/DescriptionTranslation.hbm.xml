<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
	<class name="be.mobyus.hibernate.entities.caching.DescriptionTranslation" table="description_translation">
			
		<id name="id" type="long" column="id" access="property">
			<generator class="native"/>
		</id>
		
		<property name="translation"/>
		<property name="language" column="language_type"/>
			
	</class>
</hibernate-mapping>